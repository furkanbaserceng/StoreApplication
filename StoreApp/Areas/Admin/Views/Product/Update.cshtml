@model Product


<div class="text-center">
    <div class="display-6 ">Update</div>
</div>



<form asp-area="Admin" asp-controller="Product" asp-action="Update" method="post">

    @*<div class="text text-danger" asp-validation-summary="All"></div>*@

    <input type="hidden" asp-for="ProductId" />

    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" />
        <span class="text text-danger field-validation-valid" asp-validation-for="ProductName"></span>
    </div>

    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span class="text text-danger field-validation-valid" asp-validation-for="Price"></span>
    </div>

    <div class="form-group">

        <div class="btn-group">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i> Save
            </button>
            <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="Product" asp-action="Index">
                <i class="fa fa-list"></i> Products
            </a>
        </div>
    </div>


</form>
