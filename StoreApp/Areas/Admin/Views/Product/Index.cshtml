@model IEnumerable<Product>

<div class="text-center">  

    <div class="display-6">
        Products
        <a class="btn btn-outline-success d-flex-inline justify-content-end" asp-area="Admin" asp-controller="Product" asp-action="Create">  
            <i class="fa fa-plus"></i> Create</a>
    </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <td>ProductId</td>
                    <td>ProductName</td>
                    <td>Price</td>
                    <td>Operations</td>
                </tr>
            </thead>

            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td> @item.ProductId </td>
                        <td> @item.ProductName </td>
                        <td> @item.Price.ToString("c")</td>
                        <td>
                            <div class="btn-group">

                                <a class="btn btn-warning"asp-area="Admin" asp-controller="Product" asp-action="Update" asp-route-id="@item.ProductId" ><i class="fa fa-edit"></i> Edit </a>

                            <a class="btn btn-danger"  asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@item.ProductId"><i class="fa fa-trash"></i> Delete </a>

                                <a class="btn btn-info" target="_blank" asp-area="" asp-controller="Product" asp-action="Get" asp-route-id="@item.ProductId"><i class="fa fa-search"></i> Go Web </a>

                           

                            </div>


                        </td>
                    </tr>

                }
            </tbody>
        </table>
    
</div>



