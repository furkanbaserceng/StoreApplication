@model IEnumerable<Product>

<div class="text-center">  

    <div class="display-6">
        Products
        <a class="btn btn-outline-success d-flex-inline justify-content-end" asp-area="Admin" asp-controller="Product" asp-action="Create">  
            <i class="fa fa-plus"></i> Create</a>
    </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <td>ProductId</td>
                    <td>ProductName</td>
                    <td>Price</td>
                    <td>Operations</td>
                </tr>
            </thead>

            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td> @item.ProductId </td>
                        <td> @item.ProductName </td>
                        <td> @item.Price </td>
                        <td> --- </td>
                    </tr>

                }
            </tbody>
        </table>
    
</div>



