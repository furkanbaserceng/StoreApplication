<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StoreApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StoreApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                    <i class="fa-solid fa-screwdriver-wrench fa-xl"></i> Admin
                </a>
                <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item text-white">
                            <a class="nav-link text-white" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                <i class="fa-solid fa-house fa-lg" style="color: #de5e85;"></i> Dashboard
                            </a>
                        </li>
                        
                        
                        <li class="nav-item text-white">
                            <a class="nav-link text-white" asp-area="Admin" asp-controller="Product" asp-action="Index">
                                <i class="fa-brands fa-product-hunt fa-lg" style="color: #de5e85;"></i> Products (@await Component.InvokeAsync("ProductSummary"))
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="Admin" asp-controller="Category" asp-action="Index">
                                <i class="fa-solid fa-list-ul fa-lg" style="color: #de5e85;"></i> Categories (@await Component.InvokeAsync("CategorySummary"))
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="Admin" asp-controller="Order" asp-action="Index">
                                <i class="fa-solid fa-basket-shopping" style="color: #de5e85;"></i>
                                Orders 
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav text-white">

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">
                                Go To Web <i class="fa-solid fa-arrow-left fa-lg" style="color: #de5e85;"></i>
                            </a>
                        </li>

                    </ul>
                </div>
                
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - StoreApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/font-awesome/js/all.min.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
