
@model Product



<div class="row">
    <div class="col-md-12">

        <div class="text-lg-center">
            <h6 class="display-6"> @Model.ProductName </h6>
            <img class="img-fluid rounded-3 shadow my-3" src="@Model?.ImageUrl" alt="@Model.ProductName"  />
            <p class="alert alert-info"> @Model.Price.ToString("c") </p>
        </div>

    </div>


</div>



<div class="d-flex justify-content-center">

   
    <div class="btn btn-group">

        <a class="btn btn-outline-primary" asp-action="Index" asp-controller="Product">
            <i class="fa-brands fa-product-hunt"></i> Products
        </a>
        
        <form id="@Model.ProductId" asp-page="/cart" method="post">
                <input type="hidden" asp-for="ProductId" />
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                <button type="submit" class="btn btn-outline-primary"><i class="fa fa-cart-plus"></i></button>

         </form>
        
       
        <a class="btn btn-outline-warning" asp-action="Index" asp-controller="Home">
            <i class="fa-solid fa-house"></i> Home
        </a>
    </div>


</div>
