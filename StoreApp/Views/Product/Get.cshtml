@model Product



<div class="row">
    <div class="col-md-12">

        <div class="text-lg-center">
            <h6 class="display-6"> @Model.ProductName </h6>
            <img class="img-fluid rounded-3 shadow my-3" src="@Model?.ImageUrl" alt="@Model.ProductName"  />
            <p class="alert alert-info"> @Model.Price.ToString("c") </p>
        </div>

    </div>


</div>



<div class="d-flex justify-content-center">

   
    <div class="btn-group">

        <a class="btn btn-primary" asp-action="Index" asp-controller="Product">
            <i class="fa-brands fa-product-hunt"></i> Products
        </a>
        <a class="btn btn-outline-warning" asp-action="Index" asp-controller="Home">
            <i class="fa-solid fa-house"></i> Home
        </a>
    </div>


</div>
