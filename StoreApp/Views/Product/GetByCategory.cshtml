

@model IEnumerable<Product>


@if(Model.Count() > 0)
{
    <div class="d-flex justify-content-end">
        <a class="btn btn-info " asp-controller="Product" asp-action="Index"> Get All Products</a>
    </div>
    
    <div class="row">

        <div class="col-md-3">
              @await Component.InvokeAsync("CategoriesMenu")

    
        </div>
        <div class="col-md-9">

            <partial name="_ProductCard" model="@Model" />

        </div>


    </div>
    



}
else
{
    <div class="alert alert-danger"> Error! </div>
}
