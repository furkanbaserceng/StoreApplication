@using StoreApp.Infrastructure.Extensions;

@model Product


        
<div class="col-sm-12 col-md-4 my-2">

     <div class="card" style="width: 18rem;">
         <div class="card-header text-center">
            @Model?.ProductName
         </div>
          <img class="card-img-top" src=@Model?.ImageUrl alt="Card image cap">
                 <div class="card-body">
                     <div class="card-text">
                         <div class="text-danger text-center lead p-2 rounded-2">
                             @Model?.Price.ToString("c2")
                         </div>
                     </div>
            <h5 class="card-title">@Model?.Summary</h5>
                 <div class="d-flex justify-content-center">
                
                @*<p class="card-text">---</p>*@
                <div class="btn btn-group">

                    <form id="@Model.ProductId" asp-page="/Cart" method="post">
                        <input type="hidden" asp-for="@Model.ProductId" />
                        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                        <button type="submit" class="btn btn-outline-secondary">
                            <i class="fa fa-cart-plus"></i>
                        </button>

                    </form>

                    <a asp-action="Get" asp-controller="Product" asp-route-id="@Model?.ProductId" class="btn btn-secondary">
                        <i class="fa-solid fa-arrows-turn-right"></i> Get Details
                    </a>
                </div>
                 </div>
                        
                  
         </div>
    </div>
 </div>

   
    
